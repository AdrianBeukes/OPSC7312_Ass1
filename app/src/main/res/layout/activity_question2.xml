<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="adrianbeukes.opsc7312_ass1.Question2">

    <Button
        android:text="Contact shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnContact"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:onClick="clickSMS" />

    <Button
        android:text="Show map locations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMap"
        android:onClick="ShowMap"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/btnContact"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Surf's Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHeading"
        android:textSize="36sp"
        android:fontFamily="monospace"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Surf's Up is a local surf store based on durban beach front near Ushaka, we bring you exciting specials as well as lessons for all, so come check us out, or ask us questions by contacting us below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/txtInfo"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_below="@+id/txtHeading"
        android:layout_alignParentStart="true" />
</RelativeLayout>
